<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--首页底部栏-->
    <style name="common_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/main_bottom_word_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <!--首页底部栏-->

    <!--main ordercenter-->
    <style name="main_ordercenter">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/fragment_main_ordercenter_ordertype_data_textcolor_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <!--main ordercenter-->

</resources>
